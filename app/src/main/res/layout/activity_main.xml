<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="galyanae.monsterlunch.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:background="@drawable/luxorstand"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView2"
        android:background="@drawable/trashbin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/food"
        android:id="@+id/food"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="5"
        android:layout_alignTop="@+id/textView"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/imageView4"
            android:layout_weight="1"
            android:background="#9f5e07" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/imageView5"
            android:layout_weight="1"
            android:background="#ca7e16" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/imageView6"
            android:layout_weight="1"
            android:background="#e79423"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/imageView7"
            android:layout_weight="1"
            android:background="#fab659" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/imageView8"
            android:layout_weight="1"
            android:background="#fadbb1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:layout_marginTop="34dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="BONUS"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/timeTXT"
    android:layout_alignTop="@+id/textView"
    android:layout_alignRight="@+id/linearLayout"
    android:layout_alignEnd="@+id/linearLayout"
    android:textSize="20dp"
    android:layout_toEndOf="@+id/food"
    android:layout_toRightOf="@+id/food"
    android:text="Time Left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/name"
        android:textSize="18dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/sound"
        android:onClick="playOrMute"
        android:background="@drawable/play"
        android:layout_above="@+id/imageView"
        android:layout_alignRight="@+id/food"
        android:layout_alignEnd="@+id/food" />

</RelativeLayout>
